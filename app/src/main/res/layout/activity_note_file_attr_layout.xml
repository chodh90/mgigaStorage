<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/baseColor"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:minHeight="60dp"
        android:background="@color/baseColor">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ImageView
                android:src="@drawable/ico_24dp_top_back"
                android:id="@+id/topBack"
                android:layout_gravity = "center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:textSize="18sp"
                android:layout_marginLeft="5dp"
                android:text="BizNote"
                android:textColor="@color/darkGray"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:layout_weight="1"/>

        </LinearLayout>
    </android.support.v7.widget.Toolbar>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@drawable/toolbar_shadow"/>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:fillViewport="false">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:orientation="vertical"
                android:background="@color/baseColor">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:id="@+id/fileNm"
                    android:text=""
                    android:textColor="@color/darkGray"
                    android:textStyle="bold"/>
                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:src="@drawable/default_img"
                    android:id="@+id/fileThum"
                    android:layout_gravity = "center"/>
            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#EDEDED"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/baseColor">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="5dp"
                    android:id="@+id/relationBiznote">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="25dp"
                        android:src="@drawable/ico_24dp_biznote"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:text="관련 BizNote"
                        android:textColor="#4F4F4F"
                        android:layout_weight="1"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="25dp"
                        android:src="@drawable/ico_24dp_email_open"
                        android:id="@+id/relationBtn"/>
                </LinearLayout>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#1C1C1C"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="-25dp"
                    android:id="@+id/relationImg"
                    android:visibility="gone">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="25dp"
                        android:layout_weight="0.5"
                        android:id="@+id/ascNote1"
                        android:orientation="vertical"
                        android:gravity="center_horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/ascNoteTxt1"
                            android:text="GIGA Storage"
                            android:textColor="@color/darkGray"/>
                        <ImageView
                            android:src="@drawable/default_img"
                            android:id="@+id/ascNoteImg1"
                            android:layout_width="120dp"
                            android:layout_height="120dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="25dp"
                        android:layout_weight="0.5"
                        android:id="@+id/ascNote2"
                        android:orientation="vertical"
                        android:gravity="center_horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/ascNoteTxt2"
                            android:text="GIGA Storage"
                            android:textColor="@color/darkGray"/>
                        <ImageView
                            android:src="@drawable/default_img"
                            android:id="@+id/ascNoteImg2"
                            android:layout_width="120dp"
                            android:layout_height="120dp"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/baseColor"
                android:id="@+id/email">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="25dp"
                        android:src="@drawable/ico_24dp_email"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:text="Email"
                        android:textColor="#4F4F4F"
                        android:layout_weight="1"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="25dp"
                        android:src="@drawable/ico_24dp_email_open"
                        android:id="@+id/emailBtn"/>
                </LinearLayout>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#1C1C1C" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="35dp"
                            android:src="@drawable/ico_18dp_biznote_more"
                            android:id="@+id/firstRelationImg"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:id="@+id/firstEmail">
                            <TextView
                                android:layout_width="250dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:layout_marginLeft="15dp"
                                android:text="개발팀 스터디 일정문의"
                                android:textColor="#4F4F4F"
                                android:id="@+id/emailTitle"/>
                            <TextView
                                android:layout_width="250dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:layout_marginLeft="15dp"
                                android:text="2016.09.20 08:30"
                                android:textColor="#7F7F7F"
                                android:textSize="12sp"
                                android:id="@+id/emailDate"/>
                            <TextView
                                android:layout_width="250dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:layout_marginLeft="15dp"
                                android:layout_marginBottom="30dp"
                                android:text="보낸사람: G.Park@kt.com"
                                android:textColor="#7F7F7F"
                                android:textSize="12sp"
                                android:id="@+id/emailNm"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:id="@+id/emailInfo">

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="2dp"
                        android:layout_marginLeft="25dp"
                        android:src="@drawable/ico_24dp_info"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginLeft="10dp"
                        android:text="Info"
                        android:textColor="@color/darkGray"
                        android:layout_weight="1"/>
                    <Button
                        android:textAllCaps="false"
                        android:layout_width="70dp"
                        android:layout_height="20dp"
                        android:layout_marginRight="11dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/attr_button_style"
                        android:textColor="@color/baseColor"
                        android:text="파일 더 보기"
                        android:textSize="12sp"
                        android:id="@+id/btnSameTimeFile"/>
                    </LinearLayout>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#1C1C1C"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="#fff"
                android:layout_marginBottom="2dp"
                android:paddingTop="5dp">
                <TableLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TableRow
                        android:layout_marginLeft="70dp"
                        android:layout_marginBottom="6dp">
                        <TextView
                            android:text="크기"
                            android:textColor="@color/darkGray"/>
                        <TextView
                            android:layout_marginLeft="40dp"
                            android:text=""
                            android:textColor="@color/darkGray"
                            android:id="@+id/fileSize" />
                    </TableRow>
                    <TableRow
                        android:layout_marginLeft="70dp"
                        android:layout_marginBottom="6dp">
                        <TextView
                            android:text="위치"
                            android:textColor="@color/darkGray" />
                        <TextView
                            android:layout_width="180dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="40dp"
                            android:text=""
                            android:textColor="@color/darkGray"
                            android:id="@+id/foldrWholePathNm"/>

                    </TableRow>
                    <TableRow
                        android:layout_marginLeft="70dp"
                        android:layout_marginBottom="6dp">
                        <TextView
                            android:text="생성일"
                            android:textColor="@color/darkGray"/>
                        <TextView
                            android:layout_marginLeft="40dp"
                            android:text=""
                            android:textColor="@color/darkGray"
                            android:id="@+id/cretDate"/>
                    </TableRow>
                    <TableRow
                        android:layout_marginLeft="70dp"
                        android:layout_marginBottom="6dp">
                        <TextView
                            android:text="최종 수정일"
                            android:textColor="@color/darkGray"/>
                        <TextView
                            android:layout_marginLeft="40dp"
                            android:text=""
                            android:textColor="@color/darkGray"
                            android:id="@+id/amdDate"/>
                    </TableRow>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:background="@color/baseColor">
                    </LinearLayout>
                </TableLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
