<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:minHeight="60dp"
        android:background="@color/baseColor">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ImageView
                android:src="@drawable/ico_24dp_top_back"
                android:id="@+id/topBack"
                android:layout_gravity = "center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:textSize="18sp"
                android:layout_marginLeft="5dp"
                android:text="태그편집"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:layout_weight="1"/>
            <ImageView
                android:src="@drawable/ico_24dp_done_wh"
                android:id="@+id/btn_confirm"
                android:layout_marginRight="25dp"
                android:layout_gravity = "center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/backGray">

        <EditText
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="18dp"
            android:id="@+id/input_tag"
            android:layout_gravity="center_vertical"
            android:padding="8dp"
            android:maxLength="10"
            android:textSize ="15sp"
            android:textColor="@color/darkGray"
            android:background="@drawable/search_border_style"
            android:gravity="center_vertical" />
        <Button
            android:id="@+id/tagAdd"
            android:layout_marginRight="18dp"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:background="@drawable/tag_button_style"
            android:layout_gravity="center_vertical"
            android:textColor="#FF0000"
            android:textSize="14dp"
            android:text="추가"
            android:layout_weight="1"/>
    </LinearLayout>
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:fillViewport="false">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/parentsLayout"
            android:orientation="vertical">

        </LinearLayout>
    </ScrollView>

</LinearLayout>