<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backGray"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:minHeight="60dp"
        android:background="@color/baseColor">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ImageView
                android:src="@drawable/ico_24dp_top_close"
                android:id="@+id/topBack"
                android:layout_gravity = "center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:textSize="18sp"
                android:layout_marginLeft="5dp"
                android:text="파일검색"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:layout_weight="1"/>

        </LinearLayout>
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:background="@color/backGray">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="5dp"
            android:padding="8dp"
            android:textSize ="15sp"
            android:id="@+id/searchKeyword"
            android:hint="파일이름 또는 확장자를 입력하세요."
            android:textColorHint="@color/lightGray"
            android:textColor="@color/darkGray"
            android:background="@drawable/search_border_style"
            android:drawableRight="@drawable/ico_24dp_top_srch_g"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:singleLine="true"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="사내공유"
                android:textStyle="bold"
                android:layout_marginBottom="15dp"
                android:textColor="@color/darkGray"
                android:layout_marginLeft="25dp" />

            <CheckBox
                android:theme="@style/checkBoxStyle"
                android:layout_width="wrap_content"
                android:layout_height="30dp"

                android:id="@+id/checkBox" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/search_border_style"
        android:id="@+id/totalLine">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="검색결과"
                android:textSize ="15sp"
                android:textColor="@color/darkGray"
                android:paddingLeft="25dp"
                android:paddingRight="5dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="19"
                android:textSize ="14sp"
                android:textColor="@color/baseColor"
                android:id="@+id/searchTotal"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="건"
                android:textSize ="15sp"
                android:textColor="@color/darkGray"/>
        </LinearLayout>
    </LinearLayout>
    <com.baoyz.swipemenulistview.SwipeMenuListView
            android:id="@+id/sWlistView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:dividerHeight="1dp"
            android:background="@color/windowBackground"
            android:divider="@color/lineGray"/>

</LinearLayout>
